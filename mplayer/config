# Write your default config options here!

# subtitles charset
utf8=yes

# prefer using vdpau if available - note the ending comma to fallback to other codecs
vo=vdpau,
vc=ffh264vdpau,ffmpeg12vdpau,ffwmv3vdpau,ffvc1vdpau,ffodivxvdpau,

# use large amount of cache to avoid micro frezees even in HD over wifi - 50 MB should be good
cache=50000

# default soundcard : use spdif output
ao=alsa:device=spdif

zoom=yes

# to play some files with no sound and the following error : "(Requested audio codec family [a52] (afm=liba52) not available. Enable it at compilation.)", use the following command :
# mplayer -demuxer lavf -ac ffac3 

